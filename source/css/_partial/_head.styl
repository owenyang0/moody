.header {
    z-index: 1;
    background: #242424;
    left: 0;
    right: 0;
    top: 0;
    position: relative;
    padding-bottom: 0;
    overflow: hidden;
}

.logo {
  display: block;
  width: 200px;
  margin-left: 50px;
  font-size: 36px;
  color: #fff;
  line-height: 70px;
  padding: 0 10px;
  text-align: center;
  font-family: 'League Gothic';

  &:hover, &:focus {
    background-color: $link-color;
    color: #fff;
    text-decoration: none;
  }
}

.header__nav {
    position: absolute;
    right: 0;
    top: 0;
    height: 70px;
    line-height: 70px;
}

.header__nav-list {
    list-style: none;
    margin: 0;
    padding-right: 70px;
}

.header__nav-list .nav-item {
    z-index: 1;
    position: relative;
    text-align: center;
    font-size: 18px;
    height: 43px;
    margin-left: 20px;
    padding-left: 20px;
    float: left;
}

.header__nav-list .nav-item:before {
    position: absolute;
    content: "";
    z-index: -1;
    background: url('/img/icons.png') 0 -798px no-repeat;
    width: 7px;
    height: 15px;
    top: 30px;
    left: -3px;
}

.nav-item a {
    color: #fff;
    text-transform: uppercase;
    &:hover {
      color: #77c4bc;
      text-decoration: none;
    }
}

.hero {
  height: 450px;
  overflow: hidden;
  position: relative;
}

.hero__background {
  img {
    width: 100%;
    position: relative;
    top: -130px;
  }
}

.hero__cover {
  width: 100%;
  height: 100%;
  background-image: url(/img/grid.png);
  position: absolute;
  top: 0;
  left: 0;
  opacity: 1;
}