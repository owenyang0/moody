.post {
  position: relative;
  width: 80%;
  max-width: 700px;
  margin: 2rem auto;
  padding-bottom: 2rem;
  border-bottom: #EBF2F6 1px solid;
  word-break: break-word;
}

.post-title {
  margin: 10px 0;
}

.post-content {
  padding-top: 10px;

  h3 {
    background-color: gray;
    color: #fff;
    padding: 5px 10px;
    margin-bottom: 10px;
  }

  p {
    margin-top: 10px;
  }
}