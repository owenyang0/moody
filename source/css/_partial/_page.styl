.content {
  background: #fff;
  width: 80%;
  max-width: 800px;
  margin: 50px auto;
  padding-bottom: 10px;
}

.content__hero {
  background-size: cover;
  background-position: center;
  border-radius: 3px 3px 0 0;
  width: 100%;
  height: 224px;
  overflow: hidden;
  position: relative;
  margin-bottom: 50px;

  .overlay {
    background: url(/img/overlay.png) repeat-x;
    height: 224px;
    width: 100%;
    z-index: 1;
    position: absolute;
    opacity: 0.9;
  }
}



